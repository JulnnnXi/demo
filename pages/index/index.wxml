<!--index.wxml-->
<view class="container">
  <swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class='swiper'>
    <block wx:for="{{imgUrls}}" wx:key="{{ index }}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <scroll-view scroll-x class='typelist'>
    <text wx:for="{{ typeList }}" wx:key="{{ index }}">{{ item }}</text>
  </scroll-view>
  <view class='list' wx:for="{{infoList}}" wx:key="{{ index }}">
    <image src='{{ item.avatarUrl }}'></image>
    <view class='realName'>
      {{ item.realName }}
    </view>
    <view class='city'>
      {{ item.city }}
    </view>
  </view>
</view>
